# Development image for the AdonisJS backend
FROM node:22-alpine

WORKDIR /app

# Install build tooling that may be required by npm packages
RUN apk add --no-cache python3 make g++

COPY package.json package-lock.json ./

RUN npm ci

ENV NODE_ENV=development
ENV PORT=3333

EXPOSE 3333

CMD ["npm", "run", "dev"]
